@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>Chattr</h1>
</div>

<div class="row">

    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Chattr Chat</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: messages">
                    <li>
                        <strong><span data-bind="text: UserName"></span></strong>: <span data-bind="text: Content"></span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Message</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addMessage">
                    <div class="form-group">
                        <label for="inputUser" class="col-sm-2 control-label">User</label>
                        <div class="col-sm-10">
                            <select data-bind="options:users, optionsText: 'Name', value: newMessage.User"></select>
                        </div>
                    </div>

                    <div class="form-group" data-bind="with: newMessage">
                        <label for="inputContent" class="col-sm-2 control-label">Content</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputContent" data-bind="value:Content"/>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add User</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addUser">
                    <div class="form-group" data-bind="with: newUser">
                        <label for="inputName" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputName" data-bind="value:Name" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>

</div>

